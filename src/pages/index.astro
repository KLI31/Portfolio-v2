---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../icons/Briefcase.astro";
import Experience from "../components/Experiencie.astro"
import ProyectItem from "../components/ProyectItem.astro";
import DevStack from "../icons/DevStack.astro";
import CodeIcon from "../icons/CodeIcon.astro";
import StackList from "../components/StackList.astro";
import AboutMe from "../components/AboutMe.astro";
import User from "../icons/User.astro";
import Book from "../icons/Book.astro";
import Education from "../components/Education.astro";

---

<Layout title="Luis David Rambao | Frontend Developer" description="Contrata a Luis para crear tus aplicaciones web o movil. Desarrollador frontend. Caracterizado por crear aplaciones unicas">
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero />
    </SectionContainer >
    <div class="space-y-20">
      <SectionContainer id="experiencia" class="mx-auto">
        
        <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
      <Briefcase class="size-8"/>
        Experiencia laboral
      </h2>
      <Experience/>
      </SectionContainer>

      <SectionContainer id="proyectos">
        <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
      <CodeIcon class="size-8"/>
        Mis proyectos
      </h2>

       <ProyectItem/>      
      </SectionContainer>

      <SectionContainer id="estudios">
        <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
      <Book class="size-8"/>
        Estudios
      </h2>
      <Education/>  
      </SectionContainer>


      <SectionContainer>
        <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"><DevStack class="size-8"/> Stack tecnologico</h2>
        <StackList/>
      </SectionContainer>

      <SectionContainer id="sobre-mi">
        <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"> <User class="size-8"/> Sobre m√≠</h2>


        <AboutMe/>
      </SectionContainer>
    </div>
  </main>
</Layout>
